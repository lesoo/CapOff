<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ItemRegist">

    <LinearLayout
        android:background="@color/black"
        android:id="@+id/mainlinear1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/backarrow"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logo5"
            android:layout_width="100dp"
            android:layout_height="40dp"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="210dp"
            android:src="@drawable/search"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainlinear1"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="150dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:background="@drawable/layout_border"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/image_insert"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@android:drawable/ic_menu_gallery"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
                <!--물품등록 버튼-->
                <android.widget.Button
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="35dp"
                    android:textStyle="bold"
                    android:background="@drawable/button_design"
                    android:id="@+id/registButton"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="등 록 하 기"
                    android:textColor="#AB1FEC"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_border"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="370dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품명"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints" />
                <EditText
                    android:hint="제목"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/i_name"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_border"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="370dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="경매 시작가"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:id="@+id/i_stprice"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/layout_border"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="370dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="카 테 고 리"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />
                <Spinner
                    android:layout_marginLeft="40dp"
                    android:id="@+id/i_type"
                    android:entries="@array/ctarray"
                    android:layout_width="186dp"
                    android:layout_height="48dp"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layout_border"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="370dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="상품 상태"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />
                <RadioGroup
                    android:layout_marginLeft="20dp"
                    android:id="@+id/i_state"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <RadioButton
                        android:id="@+id/i_state1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="신품" />

                    <RadioButton
                        android:id="@+id/i_state2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="상" />

                    <RadioButton
                        android:id="@+id/i_state3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="중" />

                    <RadioButton
                        android:id="@+id/i_state4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="하" />

                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/layout_border"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="370dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="상품 설명"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />
                <EditText
                    android:layout_marginLeft="15dp"
                    android:hint="판매 상품을 셜명해주세요"
                    android:id="@+id/i_intro"
                    android:layout_width="220dp"
                    android:layout_height="200dp"
                    tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:background="@color/black"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="#AB1FEC"
        app:itemTextColor="@color/black"
        app:menu="@menu/nav"/>

</androidx.constraintlayout.widget.ConstraintLayout>